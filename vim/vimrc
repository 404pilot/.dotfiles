set number
set hlsearch

"yank stuff to clipboard as well
set clipboard=unnamed

"put deleted stuff in black hole
nnoremap d "_d
nnoremap dd "_dd
nnoremap D "_D
vnoremap d "_d
" re-map the original action with leader key prefixed
" nnoremap <leader>d ""d
" nnoremap <leader>dd ""dd
" nnoremap <leader>D ""D
" vnoremap <leader>d ""d

nnoremap c "_c
nnoremap C "_C
vnoremap c "_c

nnoremap x "_x
nnoremap X "_X
"nnoremap <leader>x ""x
"nnoremap <leader>X ""X
syntax on

