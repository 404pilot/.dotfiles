[alias]
    co = checkout
    st = status
    br = branch -a
    cmm = commit -m
    lol = log --oneline -n 10
    bye = reset --hard HEAD
    wormhole = reset --hard HEAD~1
    sh = stash
    mg = merge --no-ff

[push]
    # default = simple
    default = current

[core]
    editor = vi

[pull]
    default = current

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
